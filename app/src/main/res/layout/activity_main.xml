<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.donista.newproject.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Grant Name"
        android:id="@+id/grantName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/grantDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Deadline"
        android:id="@+id/grantDeadlineEdit"
        android:layout_below="@+id/grantDescription"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/grantDescription" />

    <CheckBox
        android:text="Fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/publishButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/checkBox" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grantListView"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/publishButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publishButton"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/grantDeadlineEdit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Tags"
        android:id="@+id/grantTagsEdit"
        android:layout_below="@+id/grantDeadlineEdit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Description"
        android:id="@+id/grantDescription"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/publishButton"
        android:layout_marginStart="83dp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transButton"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
